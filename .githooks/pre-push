#!/bin/bash
# Pre-push hook for comprehensive local validation
# Implements Phase 2 of shift-left CI/CD strategy
# Thorough checks — runs full test suite and security audit

# Ensure cargo is on PATH (rustup installs to ~/.cargo/bin)
export PATH="$HOME/.cargo/bin:$PATH"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
CYAN='\033[0;36m'
NC='\033[0m' # No Color

EXIT_CODE=0

print_header() {
    echo -e "\n${CYAN}═══════════════════════════════════════════════════════${NC}"
    echo -e "${CYAN}  Pre-Push Validation (Shift-Left CI/CD)${NC}"
    echo -e "${CYAN}═══════════════════════════════════════════════════════${NC}\n"
}

print_status()  { echo -e "${BLUE}[Check]${NC} $1"; }
print_success() { echo -e "${GREEN}[✓]${NC} $1"; }
print_warning() { echo -e "${YELLOW}[!]${NC} $1"; }
print_error()   { echo -e "${RED}[✗]${NC} $1"; }
print_info()    { echo -e "${CYAN}[i]${NC} $1"; }

check_cargo_available() {
    if ! command -v cargo > /dev/null 2>&1; then
        print_error "cargo not found — is Rust installed via rustup?"
        exit 1
    fi
}

# Check 1: Full Test Suite
check_tests() {
    print_status "Running test suite (cargo test)..."

    TEST_OUTPUT=$(cargo test --workspace 2>&1)
    if [ $? -ne 0 ]; then
        print_error "Tests failed"
        echo "$TEST_OUTPUT"
        print_info "Fix failing tests before pushing"
        return 1
    fi

    # Extract test summary
    SUMMARY=$(echo "$TEST_OUTPUT" | grep "^test result:" | tail -1)
    print_success "All tests passed — $SUMMARY"
    return 0
}

# Check 2: Dependency Security Audit (Rust's Sobelow + deps.audit equivalent)
check_security_audit() {
    print_status "Running dependency security audit (cargo audit)..."

    if ! command -v cargo-audit > /dev/null 2>&1; then
        print_warning "cargo-audit not installed — skipping security audit"
        print_info "Install: cargo install cargo-audit"
        return 0
    fi

    AUDIT_OUTPUT=$(cargo audit 2>&1)
    AUDIT_STATUS=$?

    if [ $AUDIT_STATUS -ne 0 ]; then
        # Distinguish between actual vulnerabilities and other errors
        if echo "$AUDIT_OUTPUT" | grep -q "Vulnerability found"; then
            print_error "Security vulnerabilities found in dependencies"
            echo "$AUDIT_OUTPUT"
            print_info "Update affected dependencies or use 'git push --no-verify' to skip"
            return 1
        else
            print_warning "Security audit had issues (see output)"
            echo "$AUDIT_OUTPUT"
            return 0
        fi
    fi

    print_success "No known security vulnerabilities in dependencies"
    return 0
}

# Check 3: Unused Dependencies (Rust's deps.unlock --check-unused equivalent)
check_unused_deps() {
    print_status "Checking for unused dependencies (cargo machete)..."

    if ! command -v cargo-machete > /dev/null 2>&1; then
        print_warning "cargo-machete not installed — skipping unused deps check"
        print_info "Install: cargo install cargo-machete"
        return 0
    fi

    MACHETE_OUTPUT=$(cargo machete 2>&1)
    MACHETE_STATUS=$?

    if [ $MACHETE_STATUS -ne 0 ]; then
        print_warning "Unused dependencies detected"
        echo "$MACHETE_OUTPUT"
        print_info "Consider removing unused deps to reduce compile time"
        # Don't fail — just warn (same as your Elixir hook)
        return 0
    fi

    print_success "No unused dependencies"
    return 0
}

# Check 4: Documentation builds (catches broken doc links)
check_docs() {
    print_status "Checking documentation (cargo doc)..."

    DOC_OUTPUT=$(RUSTDOCFLAGS="-D warnings" cargo doc --workspace --no-deps 2>&1)
    if [ $? -ne 0 ]; then
        print_warning "Documentation has warnings"
        echo "$DOC_OUTPUT" | grep "warning:"
        # Don't fail — just warn
        return 0
    fi

    print_success "Documentation builds cleanly"
    return 0
}

# Main execution
main() {
    print_header
    check_cargo_available

    print_info "Running comprehensive pre-push validation..."
    print_info "This is more thorough than pre-commit (takes longer)"
    echo ""

    check_tests || EXIT_CODE=1
    echo ""

    check_security_audit || EXIT_CODE=1
    echo ""

    check_unused_deps
    echo ""

    check_docs
    echo ""

    echo -e "${CYAN}═══════════════════════════════════════════════════════${NC}"

    if [ $EXIT_CODE -eq 0 ]; then
        print_success "All pre-push checks passed!"
        print_info "Your code is ready to push to remote repository"
        echo -e "${CYAN}═══════════════════════════════════════════════════════${NC}\n"
        exit 0
    else
        print_error "Pre-push validation failed"
        print_info "Fix the issues above and try again"
        print_warning "To bypass: git push --no-verify (not recommended)"
        echo -e "${CYAN}═══════════════════════════════════════════════════════${NC}\n"
        exit 1
    fi
}

main
